<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
</head>
<body>
    <nav>
        @if (User.IsInRole("Administrator"))
        {
            <a asp-controller="Account" asp-action="Admin">Admin</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Members">Members</a>
        }
        <a asp-controller="Clocks" asp-action="Index">Index</a>
        @if(!User.Identity.IsAuthenticated){
            <a asp-controller="Account" asp-action="Register">Register</a>
            <a asp-controller="Account" asp-action="LogIn">Login</a>
        }
    </nav>
    <h1>KlockorGrupp6App</h1>
    <div>
        @RenderBody()
    </div>
    
    <footer>&copy; Grupp6 2025</footer>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="~/Scripts/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    @RenderSection("scripts", false)
</body>
</html>