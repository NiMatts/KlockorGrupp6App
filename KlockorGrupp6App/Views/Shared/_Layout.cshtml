<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Watchmakers Dream</title>
    <link rel="stylesheet" href='https://unpkg.com/@@picocss/pico@latest/css/pico.min.css' />
</head>
<body class="container">

    <header>
        <nav>
            <ul>
                <li><strong>⌚ Watchmakers Dream</strong></li>
            </ul>
            <ul>
                @if (User.IsInRole("Administrator"))
                {
                    <li><a asp-controller="Account" asp-action="Admin">Admin</a></li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Members">Members</a></li>
                }
                <li><a asp-controller="Clocks" asp-action="Index">Watches</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Account" asp-action="Register" role="button" class="secondary">Register</a></li>
                    <li><a asp-controller="Account" asp-action="Login" role="button">Login</a></li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Logout" role="button" class="contrast">Logout</a></li>
                }
            </ul>
        </nav>
    </header>

    <main style="margin-top: 2rem;">
        @RenderBody()
    </main>

    <footer style="text-align: center; margin-top: 3rem;">
        <small>&copy; Grupp6 — 2025. Built with Chatgpt and Pico.css</small>
    </footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="~/Scripts/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
    @RenderSection("scripts", required: false)
</body>
</html>